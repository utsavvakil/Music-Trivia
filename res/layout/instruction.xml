<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:background="#000000"
              android:layout_height="fill_parent">

    <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:text="Instructions"
            android:layout_gravity="center"/>

    <ViewFlipper
            android:id="@+id/view_flipper"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="6dip" >

        <!--  The child Views/Layout to flip -->

        <!--  Layout 1 for 1st Screen -->

        <!--  Layout 2 for 2nd Screen -->

        <!--  Layout 3 for 3rd Screen -->

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:background="#000000"
                android:orientation="vertical" >
            <ImageView
                    android:layout_width="84dp"
                    android:layout_height="66dp"
                    android:id="@+id/imageView3"
                    android:layout_marginRight="-25dp"
                    android:background="@drawable/next"
                    android:layout_marginTop="-12dp"
                    android:layout_gravity="right|center_vertical"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="# 1"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp"
                    >
            </TextView>

            <TextView
                    android:layout_marginTop="15dp"
                    android:id="@+id/TextView1"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:text="There are 30 Questions"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="#FFFFFF"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:background="#000000"
                android:orientation="vertical" >

            <ImageView
                    android:layout_width="84dp"
                    android:layout_height="66dp"
                    android:id="@+id/imageView5"
                    android:layout_marginLeft="-25dp"
                    android:background="@drawable/next1"
                    android:layout_marginTop="-60dp"
                    android:layout_gravity="left|center_vertical"/>
            <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="# 4"
                    android:textColor="#FFFFFF"

                    android:textSize="25dp"
                    >
            </TextView>

            <TextView
                    android:layout_marginTop="15dp"
                    android:id="@+id/TextView2"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:text="Enjoy Gaming!"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="#FFFFFF"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:background="#000000"
                android:orientation="vertical" >

            <ImageView
                    android:layout_width="84dp"
                    android:layout_height="66dp"
                    android:id="@+id/imageView1"
                    android:layout_marginRight="-25dp"
                    android:background="@drawable/next"
                    android:layout_marginTop="-12dp"
                    android:layout_gravity="right|center_vertical"/>
            <ImageView
                    android:layout_width="84dp"
                    android:layout_height="66dp"
                    android:id="@+id/imageView6"
                    android:layout_marginLeft="-25dp"
                    android:background="@drawable/next1"
                    android:layout_marginTop="-60dp"
                    android:layout_gravity="left|center_vertical"/>
            <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="# 3"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp"
                    >
            </TextView>

            <TextView
                    android:layout_marginTop="15dp"
                    android:id="@+id/TextView3"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:text="Right Answer=10pts"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:background="#000000"
                android:orientation="vertical" >
            <ImageView
                    android:layout_width="84dp"
                    android:layout_height="66dp"
                    android:id="@+id/imageView"
                    android:layout_marginRight="-25dp"
                    android:background="@drawable/next"
                    android:layout_marginTop="-12dp"
                    android:layout_gravity="right|center_vertical"/>
            <ImageView
                    android:layout_width="84dp"
                    android:layout_height="66dp"
                    android:id="@+id/imageView7"
                    android:layout_marginLeft="-25dp"
                    android:background="@drawable/next1"
                    android:layout_marginTop="-60dp"
                    android:layout_gravity="left|center_vertical"/>
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="# 2"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                >
        </TextView>
            <TextView
                    android:layout_marginTop="15dp"
                    android:id="@+id/TextView4"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:text="Right Answer=10pts"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="#FFFFFF"/>
        </LinearLayout>
    </ViewFlipper>

</LinearLayout>
